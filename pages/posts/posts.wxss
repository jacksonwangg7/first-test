/* pages/posts/posts.wxss */
swiper{
  width:100%;
  height:450rpx;
}
swiper image{
  width:100%;
  height:450rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-top:10rpx;
  padding-bottom:10rpx;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.post-author{
  width:60rpx;
  height:60rpx;
}
.post-date{
  margin-left:20rpx;
  font-size:26rpx;
}
.post-title{
  margin-left:10rpx;
  margin-bottom:10rpx;
  font-size:34rpx;
  font-weight:bold;
  color:#333
}
.post-image{
  width:100%;
  height:340rpx;
  margin-bottom:15rpx;
}
.post-content{
  font-size:28rpx;color:#666;
  letter-spacing: 2rpx;
  margin-left:20rpx;
  margin-bottom:20rpx;
}
.post-info{
  font-size:24rpx;
  padding-left:20rpx;
}