.info{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin:10rpx 0 10rpx 20rpx;
}
.info-image{
  width:80rpx;
  height:80rpx;
}
.info-text{
 margin-left:20rpx;
 font-size:24rpx;
 color:#ABABAB
}
.title{
  margin:20rpx 0 20rpx 20rpx;
  font-weight:bold;
  letter-spacing: 5rpx;
}
.diliver{
  width:90%;
  position:relative;
  margin:80rpx 5%;
}
.diliver-line{
  width:100%;
  height:1rpx;
  background-color:#eee;
}
.diliver-image{
  position:absolute;
  top:-40rpx;
  width:80rpx;
  height:80rpx;
  right:0;
}
.article{
  margin-left:20rpx;
  font-size:30rpx;
  font-weight:bold;
  color:#595959;
  letter-spacing: 2rpx;
}